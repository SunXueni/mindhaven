    <script>
        // Create dynamic background elements
        function createDynamicBackground() {
            // Create particles
            const particlesContainer = document.getElementById('particles-container');
            for (let i = 0; i < 25; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                const size = Math.random() * 6 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                particle.style.animationDelay = `${Math.random() * 20}s`;
                
                const colors = [
                    'rgba(74, 75, 140, 0.1)',
                    'rgba(139, 211, 221, 0.12)',
                    'rgba(255, 154, 118, 0.1)'
                ];
                particle.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                
                particlesContainer.appendChild(particle);
            }
            
            // Create interactive dots
            const interactiveBg = document.getElementById('interactive-bg');
            for (let i = 0; i = 15; i++) {
                const dot = document.createElement('div');
                dot.classList.add('interactive-dot');
                
                dot.style.left = `${Math.random() * 100}%`;
                dot.style.top = `${Math.random() * 100}%`;
                
                interactiveBg.appendChild(dot);
            }
        }
        
        // Create click particle effect
        function createClickEffect(x, y, color = null) {
            const container = document.getElementById('click-effect-container');
            const effect = document.createElement('div');
            effect.classList.add('click-effect');
            effect.style.left = `${x}px`;
            effect.style.top = `${y}px`;
            
            const particleCount = 10;
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('click-particle');
                
                const angle = (i / particleCount) * Math.PI * 2;
                const distance = 25 + Math.random() * 40;
                const tx = Math.cos(angle) * distance;
                const ty = Math.sin(angle) * distance;
                
                particle.style.setProperty('--tx', `${tx}px`);
                particle.style.setProperty('--ty', `${ty}px`);
                
                if (!color) {
                    const colors = ['var(--accent)', 'var(--secondary)', 'var(--primary)'];
                    particle.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                } else {
                    particle.style.backgroundColor = color;
                }
                
                const size = 4 + Math.random() * 5;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                particle.style.animationDelay = `${Math.random() * 0.2}s`;
                
                effect.appendChild(particle);
            }
            
            container.appendChild(effect);
            
            setTimeout(() => {
                effect.remove();
            }, 1500);
        }
        
        // Create ripple effect
        function createRippleEffect(element, x, y) {
            const ripple = document.createElement('div');
            ripple.classList.add('click-ripple');
            
            const rect = element.getBoundingClientRect();
            const relativeX = x - rect.left;
            const relativeY = y - rect.top;
            
            ripple.style.left = `${relativeX}px`;
            ripple.style.top = `${relativeY}px`;
            
            element.appendChild(ripple);
            
            setTimeout(() => {
                ripple.remove();
            }, 600);
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Create dynamic background
            createDynamicBackground();
            
            // Add click effects to interactive elements
            const clickableElements = document.querySelectorAll('.section-card, .impact-card, .team-card, .stat-card, .btn, .highlight-icon');
            
            clickableElements.forEach(element => {
                element.addEventListener('click', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    createRippleEffect(this, e.clientX, e.clientY);
                    
                    let color = null;
                    if (this.classList.contains('impact-card')) {
                        color = 'var(--accent)';
                    } else if (this.classList.contains('team-card')) {
                        color = 'var(--primary)';
                    } else if (this.classList.contains('stat-card')) {
                        color = 'var(--secondary)';
                    } else if (this.classList.contains('btn-primary')) {
                        color = 'var(--primary)';
                    } else if (this.classList.contains('btn-secondary')) {
                        color = 'var(--secondary)';
                    }
                    
                    const absoluteX = e.clientX;
                    const absoluteY = e.clientY;
                    createClickEffect(absoluteX, absoluteY, color);
                });
            });
            
            // Interactive dot effects
            document.querySelectorAll('.interactive-dot').forEach(dot => {
                dot.addEventListener('click', function(e) {
                    e.stopPropagation();
                    
                    this.style.transform = 'scale(4)';
                    this.style.opacity = '0';
                    this.style.backgroundColor = 'var(--secondary)';
                    
                    const rect = this.getBoundingClientRect();
                    const x = rect.left + rect.width / 2;
                    const y = rect.top + rect.height / 2;
                    createClickEffect(x, y, 'var(--secondary)');
                    
                    setTimeout(() => {
                        this.style.transform = '';
                        this.style.opacity = '0.2';
                        this.style.backgroundColor = 'var(--primary)';
                    }, 1000);
                });
            });
            
            // Scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        if (entry.target.classList.contains('team-card')) {
                            entry.target.classList.add('animate');
                        } else if (!entry.target.classList.contains('hero-content') && 
                                  !entry.target.classList.contains('hero-tagline') && 
                                  !entry.target.classList.contains('hero-description') &&
                                  !entry.target.classList.contains('cta-buttons')) {
                            entry.target.classList.add('fade-in');
                        }
                    }
                });
            }, observerOptions);
            
            document.querySelectorAll('.product-showcase, .impact-card, .team-card, .stats-container, .brand-showcase, .highlight-section').forEach(el => {
                observer.observe(el);
            });
            
            // Progress bar animations
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 300);
            });
            
            // Smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
